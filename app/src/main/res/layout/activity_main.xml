<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/wordy"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Guess the word!"
        android:textSize="18sp" />


    <!-- ROW 0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_0_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_0_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_0_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_0_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_0_4"
            style="@style/WordCell" />
    </LinearLayout>

    <!-- ROW 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_1_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_1_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_1_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_1_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_1_4"
            style="@style/WordCell" />
    </LinearLayout>

    <!-- ROW 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_2_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_2_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_2_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_2_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_2_4"
            style="@style/WordCell" />
    </LinearLayout>

    <!-- ROW 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_3_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_3_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_3_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_3_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_3_4"
            style="@style/WordCell" />
    </LinearLayout>

    <!-- ROW 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_4_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_4_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_4_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_4_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_4_4"
            style="@style/WordCell" />
    </LinearLayout>

    <!-- ROW 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cell_5_0"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_5_1"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_5_2"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_5_3"
            style="@style/WordCell" />

        <TextView
            android:id="@+id/cell_5_4"
            style="@style/WordCell" />
    </LinearLayout>

    <EditText
        android:id="@+id/guess_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/enter_a_5_letter_word"
        android:inputType="textCapCharacters"
        android:maxLength="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit" />

        <Button
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/restart" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/clear" />

        <Button
            android:id="@+id/add_word_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/add_word" />
    </LinearLayout>

</LinearLayout>
